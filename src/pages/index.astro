      <div class="font-bold text-3xl">Joshua Akan-Etuk</div>
      <div class="font-regular text-xl">
        Product-focused full stack developer. Available for freelance.
      </div>
      <div class="font-regular text-lg">Typescript/React, Java, Python</div>
      <div class="font-regular text-lg mt-4">Say Hi! <a class="underline" href="mailto:joshuaakanetuk@gmail.com">joshuaakanetuk@gmail.com</a></div>
    </header>
    <!-- Product -->
    {PRODUCTS.map((product) => <Product {...product} />)}
  </div>
  <script
    defer
    data-domain="joshuaakanetuk.com"
    src="https://plausible-analytics-production-1637.up.railway.app/js/script.js"
  ></script>
  <!-- Cal floating-popup embed code begins -->
