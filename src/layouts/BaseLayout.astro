---
// import BaseHead from '../components/BaseHead.astro';
const { title, description } = Astro.props;
---

<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title ?? "Joshua Akan-Etuk"}</title>
    <link href={import.meta.env.BASE_URL + "favicon.png"} rel="icon" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link
      href="https://api.fontshare.com/v2/css?f[]=satoshi@900,700,500,400,300&display=swap"
      rel="stylesheet"
    />
    <meta content="Joshua Akan-Etuk" name="title" />
    <meta
      content={description ??
        "Product-focused full stack developer. Available for freelance."}
      name="description"
    />
    <!-- Open Graph / Facebook -->
    <meta content="website" property="og:type" />
    <meta content="https://joshuaakanetuk.com/" property="og:url" />
    <meta content="Joshua Akan-Etuk" property="og:title" />
    <meta
      content={description ??
        "Product-focused full stack developer. Available for freelance."}
      property="og:description"
    />
    <meta
      content={import.meta.env.BASE_URL + "graph.png"}
      property="og:image"
    /><!-- Twitter -->
    <meta content="summary_large_image" property="twitter:card" />
    <meta content="https://joshuaakanetuk.com/" property="twitter:url" />
    <meta content="Joshua Akan-Etuk" property="twitter:title" />
    <meta
      content={description ??
        "Product-focused full stack developer. Available for freelance."}
      property="twitter:description"
    />
  </head>
  <body>
    <slot />
    <script
      defer
      data-domain="joshuaakanetuk.com"
      src="https://plausible-analytics-production-1637.up.railway.app/js/script.js"
    ></script>
  </body>
  <style>
    * {
      box-sizing: border-box;
    }
    html,
    body {
      width: 100%;
      /* height: 100%; */
      background-color: #181818;
      font-family: "Satoshi", "sans-serif";
      font-weight: 100;
    }
  </style>
</html>
